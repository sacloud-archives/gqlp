type Server {
  id: ID!
  name: String!
  tags: [String!]!
  description: String!
  availability: String!
  hostName: String!
  interfaceDriver: String!
  planID: ID!
  planName: String!
  cpu: Int!
  memory: Int!
  commitment: String!
  planGeneration: Int!
  instanceHostName: String!
  instanceStatus: String!
  disks: [Disk!]
}

type Disk {
  id: ID!
  name: String!
  tags: [String!]!
  description: String!
  size: Int!
}

type Query {
  servers(zone: String!): [Server!]!
}

type MutationResult {
  success: Boolean!
}

input ShutdownOption {
  force: Boolean!
}

type Mutation {
    shutdownServer(zone: String!, id: ID!, option: ShutdownOption): MutationResult!
}

